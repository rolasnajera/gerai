{
  "name": "gerai",
  "version": "0.0.12",
  "description": "A modern, privacy-focused desktop AI chat application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run vite:dev\" \"wait-on tcp:5173 && npm run electron:watch\"",
    "vite:dev": "vite",
    "electron:watch": "tsup --watch --onSuccess \"electron .\"",
    "electron:build": "tsup",
    "build": "tsc && vite build && npm run electron:build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "release:patch": "npm version patch -m 'chore: release v%s' && git push origin main --follow-tags",
    "release:minor": "npm version minor -m 'chore: release v%s' && git push origin main --follow-tags",
    "release:major": "npm version major -m 'chore: release v%s' && git push origin main --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolasnajera/gerai.git"
  },
  "build": {
    "appId": "com.gerai.app",
    "productName": "GERAI",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "rolasnajera",
      "repo": "gerai"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "services/**/*",
      "db.js",
      "package.json",
      "build/icon.png"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "marked": "^17.0.1",
    "openai": "^6.10.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.1.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  }
}

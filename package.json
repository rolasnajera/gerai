{
  "name": "gerai",
  "version": "1.0.0",
  "description": "A modern, privacy-focused desktop AI chat application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run vite:dev\" \"wait-on tcp:5173 && npm run electron:dev\"",
    "vite:dev": "vite",
    "electron:dev": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.gerai.app",
    "productName": "GERAI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "services/**/*",
      "db.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "marked": "^17.0.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.7",
    "wait-on": "^9.0.3"
  }
}